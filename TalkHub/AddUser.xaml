<Window x:Class="TalkHub.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Добавить пользователя" Height="350" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#FF2C3E50" FontFamily="Segoe UI" >

    <Window.Resources>
        <!-- Тень для элементов -->
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>

        <!-- Стиль для TextBox и DatePicker -->
        <Style TargetType="TextBox" x:Key="ModernTextBox">
            <Setter Property="Background" Value="#FF34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF1ABC9C"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" >
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DatePicker" x:Key="ModernDatePicker">
            <Setter Property="Background" Value="#FF34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF1ABC9C"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" >
                            <Grid>
                                <DatePickerTextBox x:Name="PART_TextBox" 
                                                   Background="Transparent" 
                                                   Foreground="{TemplateBinding Foreground}" 
                                                   BorderThickness="0" 
                                                   Padding="2" />
                                <Button x:Name="PART_Button" Width="20" Height="20" HorizontalAlignment="Right" Margin="0,0,4,0" 
                                        Background="#FF1ABC9C" BorderThickness="0" Cursor="Hand" 
                                        ToolTip="Выбрать дату" 
                                        Focusable="False" 
                                        Template="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                    <Path Data="M0,0 L1,0 1,1 0,1 Z" Fill="White" />
                                </Button>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style TargetType="PasswordBox" x:Key="ModernPasswordBox">
            <Setter Property="Background" Value="#FF34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF1ABC9C"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" >
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопки -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#FF1ABC9C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF16A085"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF149174"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF95A5A6"/>
                                <Setter Property="Foreground" Value="#FF7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="User ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5" Foreground="White" FontWeight="SemiBold"/>
        <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Username:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5" Foreground="White" FontWeight="SemiBold"/>
        <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5" Foreground="White" FontWeight="SemiBold"/>
        <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Password:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5" Foreground="White" FontWeight="SemiBold"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" Style="{StaticResource ModernPasswordBox}" PasswordChanged="PasswordBox_PasswordChanged"/>

        <TextBlock Text="Created At:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5" Foreground="White" FontWeight="SemiBold"/>
        <DatePicker Grid.Row="4" Grid.Column="1"  SelectedDate="{Binding CreatedAt}"/>

        <TextBlock Text="Last Login:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,5" Foreground="White" FontWeight="SemiBold"/>
        <DatePicker Grid.Row="5" Grid.Column="1"  SelectedDate="{Binding LastLogin}"/>

        <Button Grid.Row="6" Grid.Column="1" Content="Добавить" Style="{StaticResource ModernButton}"
                Command="{Binding AddCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</Window>
