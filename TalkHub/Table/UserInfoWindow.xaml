<Window x:Class="TalkHub.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Info" Height="450" Width="800"
        Background="#FF2C3E50"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Тень для кнопок и DataGrid -->
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
        <!-- Стиль для кнопок -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#FF1ABC9C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF16A085"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF149174"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF95A5A6"/>
                                <Setter Property="Foreground" Value="#FF7F8C8D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DataGrid -->
        <Style TargetType="DataGrid" x:Key="ModernDataGrid">
            <Setter Property="Background" Value="#FF34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="RowBackground" Value="#FF3B5360"/>
            <Setter Property="AlternatingRowBackground" Value="#FF2E4053"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- Стиль для заголовков столбцов -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF1ABC9C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DataGrid с применением стиля -->
        <DataGrid ItemsSource="{Binding Users}" AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,10" IsReadOnly="True" Style="{StaticResource ModernDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Password" Binding="{Binding PasswordHash}" Width="*"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="150"/>
                <DataGridTextColumn Header="Last Login" Binding="{Binding LastLogin}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
            <Button Content="Сохранить в JSON" Width="150" Style="{StaticResource ModernButton}" Command="{Binding SaveToJsonCommand}"/>
            <Button Content="Загрузить из JSON" Width="150" Style="{StaticResource ModernButton}" Command="{Binding LoadFromJsonCommand}"/>
            <Button Content="Добавить пользователя" Width="150" Style="{StaticResource ModernButton}" Command="{Binding AddUserCommand}"/>
        </StackPanel>
    </Grid>
</Window>
